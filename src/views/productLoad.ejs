<!DOCTYPE html>
<html lang="es">

    <%- include('partials/head') %>
<body>
    <!-- encabezado -->
    <%- include('partials/header') %>
    <main>
        <section id="cargar-producto">
            <h2>Carga y edicion de productos</h2>
            <!-- Formulario de registro -->
            <form method="POST" action="/products/<%=producto.product_id%>?_method=PUT">
                <!-- Campo: Nombre -->
                <label for="nombre">Nombre de producto: </label>
                <input type="text" id="product_name" name="product_name" value="<%= producto.product_name %>" required>
                <label for="brand">Marca del producto: </label>
                <input type="text" id="product_brand" name="product_brand" value="<%= producto.product_brand %>" required>
                <label for="detail">Caracteristicas del producto: </label>
                <input type="text" id="product_detail" name="product_detail" value="<%= producto.product_detail %>" required>                
                <!-- Campo: category -->
                <label for="nombre">Categoría del producto: </label>
                <input type="text" id="product_category" name="product_category" value="<%= producto.product_category%>" required>
                <!-- Campo: price-->
                <label for="nombre">Precio de producto: </label>
                <input type="text" id="product_price" name="product_price" value="<%= producto.product_price %>" required>
                <label for="nombre">Descuento del producto: </label>
                <input type="text" id="product_discount" name="product_discount" value="<%= producto.product_discount %>" required>
               <!-- Campo: Img-->
               <figure class="product-box_image">
                    <img src="/img/zapatillas_img/<%=producto.product_img%>.png" alt="Modelo <%= producto.product_name%>">
                </figure>
            <!-- Agregar más opciones según las categorías disponibles -->
                <!-- Botón: modificar,eliminar -->
                <button type="submit">MODIFICAR</button>
                </button>
            </form>
            <form method="POST" action="/products/<%= producto.product_id %>?_method=DELETE" >
                <button type="submit" class="redirect">ELIMINAR</button>
            </form>
        </section>
    </main>








    <!-- pie de pagina -->
    <%- include('partials/footer') %>
</body>
</html>